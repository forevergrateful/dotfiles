{
    "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",

    /* Disable this otherwise in 'cmd' we get an extra 'm' character sometimes. */
    "osc99": false,
    "final_space": false,

    "blocks": [{
            "type": "prompt",
            "alignment": "right",
            "segments": [{
                    "type": "shell",
                    "style": "plain",
                    "foreground": "#007acc",
                    "properties": {
                        "prefix": "",
                        "postfix": ""
                    }
                },
                {
                    "type": "root",
                    "style": "plain",
                    "foreground": "#ff8080",
                    "properties": {
                        "prefix": " <#757575,>as</> ",
                        "postfix": "",
                        "root_icon": "root"
                    }
                },
                {
                    "type": "time",
                    "style": "plain",
                    "foreground": "#689f38",
                    "properties": {
                        "prefix": " <#757575,>|</> ",
                        "postfix": "",
                        "time_format": "15:04:05"
                    }
                }
            ]
        },
        {
            "type": "prompt",
            "alignment": "left",
            "newline": true,
            "segments": [{
                    "type": "text",
                    "style": "plain",
                    "foreground": "#a3a3a3",
                    "properties": {
                        "prefix": "",
                        "postfix": "",
                        "text": "\u250c"
                    }
                }, {
                    "type": "text",
                    "style": "powerline",
                    "foreground": "#a3a3a3",
                    "properties": {
                        "prefix": " ",
                        "postfix": " ",
                        "text": "MYâˆˆ"
                    }
                }, {
                    "type": "os",
                    "style": "plain",
                    "foreground": "#e4e4e4",
                    "background": "#0077c2",
                    "properties": {
                        "color_background": true,
                        "prefix": " ",
                        "postfix": " ",
                        "display_distro_name": true,
                        "macos": "mac"
                    }
                }, {
                    "type": "shell",
                    "style": "powerline",
                    "invert_powerline": true,
                    "powerline_symbol": "\uE0B0",
                    "foreground": "#e4e4e4",
                    "background": "#0077c2",
                    "properties": {
                        "color_background": true,
                        "mapped_shell_names": {
                            "pwsh": "PS"
                        }
                    }
                }, {
                    "type": "session",
                    "style": "plain",
                    "foreground": "#757575",
                    "properties": {
                        "prefix": " ",
                        "display_host": true,
                        "ssh_icon": "[SSH] "
                    }
                },
                {
                    "type": "path",
                    "style": "plain",
                    "powerline_symbol": "\ue0b0",
                    "foreground": "#100e23",
                    "background": "#91ddff",
                    "properties": {
                        "style": "agnoster_full",
                        "max_depth": 4,
                        "enable_hyperlink": false
                    }
                },
                {
                    "type": "terraform",
                    "style": "powerline",
                    "powerline_symbol": "\ue0b0",
                    "foreground": "#100e23",
                    "background": "#ffee58"
                },
                {
                    "type": "exit",
                    "style": "powerline",
                    "foreground": "#ffffff",
                    "background": "#ff8080",
                    "background_templates": [
                        "{{ if gt .Code 0 }}#e91e63{{ end }}"
                    ],
                    "leading_diamond": "",
                    "trailing_diamond": "\uE0B4",
                    "properties": {
                        "always_enabled": true,
                        "template": "\uE23A",
                        "prefix": "<#193549>\uE0B0</> "
                    }
                }
            ]
        },
        {
            "type": "prompt",
            "alignment": "left",
            "newline": true,
            "segments": [{
                    "type": "text",
                    "style": "plain",
                    "foreground": "#a3a3a3",
                    "properties": {
                        "prefix": "",
                        "postfix": "",
                        "text": "\u2514 "
                    }
                },
                {
                    "type": "text",
                    "style": "plain",
                    "foreground": "#ffffff",
                    "properties": {
                        "prefix": "",
                        "postfix": "",
                        "text": "$ "
                    }
                }
            ]
        }
    ]
}
