{
    "shellcheck.enable": true,
    "shellcheck.run": "onType",
    "shellcheck.enableQuickFix": true,
    "shellcheck.customArgs": ["--external-sources"],
    "shellcheck.useWorkspaceRootAsCwd": true,
    "shellcheck.ignorePatterns": {
        "**/git-fuzy": true,
        "**/test_canonicalize_path": true,
        "**/test_readlink_emulation": true,
        "**/default.mustache": true,
        "**/source/stow/**/*.sh": true,
        "**/fish/.config/**/*.sh": true,
        "**/fish/.config/base16-shell/**/*.sh": true,
        "**/fish/.config/base16-fzf/**/*.sh": true,
        "**/fish/.config/git-fuzzy/**/*.sh": true
    },
    "[shellscript]": {
        "editor.formatOnSave": true,
        "files.eol": "\n"
    },

    "Lua.workspace.ignoreDir": [
        ".vscode",
        "linux/.config/micro",
        "windows/clink"
    ],
    "Lua.workspace.library": [
        "windows/clink-completions",
        "windows/clink",
        "macos/.hammerspoon",
        "linux/.config"
    ],

    "perl.enable": false,

    "xml.validation.enabled": false,

    "terminal.integrated.confirmOnExit": "always",
    "terminal.integrated.showExitAlert": true,
    "terminal.integrated.cwd": "${workspaceFolder}",

    "terminal.integrated.defaultProfile.windows": "Command Prompt",
    "terminal.integrated.profiles.windows": {
        "PowerShell": {
            "source": "PowerShell",
            "icon": "terminal-powershell"
        },
        "Command Prompt": {
            "path": [
                "${env:windir}\\Sysnative\\cmd.exe",
                "${env:windir}\\System32\\cmd.exe"
            ],
            "args": [],
            "icon": "terminal-cmd"
        },
        "MSYS2": {
            "path": [
                "${env:USERPROFILE}\\scoop\\apps\\msys2\\current\\usr\\bin\\bash.exe"
            ],
            "args": [
                "--login", "-i"
            ],
            "env": {
                "MSYSTEM": "MINGW64",
                "CHERE_INVOKING": "1",
                "MSYS2_PATH_TYPE": "inherit"
            },
            "icon": "terminal-bash"
        },
        "Fish": {
            "path": [
                "${env:USERPROFILE}\\scoop\\apps\\msys2\\current\\usr\\bin\\fish.exe"
            ],
            "args": [
                "--login", "-i"
            ],
            "env": {
                "MSYSTEM": "MSYS2",
                "CHERE_INVOKING": "1",
                "MSYS2_PATH_TYPE": "inherit"
            },
            "icon": "terminal"
        },
        "Git Bash": {
            "source": "Git Bash",
            "icon": "terminal-bash"
        }
    },

    "terminal.integrated.defaultProfile.osx": "fish",
    "terminal.integrated.profiles.osx": {
        "sh": {
            "path": "sh",
            "args": []
        },
        "bash": {
            "path": "bash",
            "args": [
                "-l"
            ],
            "icon": "terminal-bash"
        },
        "zsh": {
            "path": "zsh",
            "args": [
                "-l"
            ]
        },
        "fish": {
            "path": "fish",
            "args": [
                "-l"
            ]
        },
        "tmux": {
            "path": "tmux",
            "icon": "terminal-tmux"
        },
        "pwsh": {
            "path": "pwsh",
            "icon": "terminal-powershell"
        }
    },

    "terminal.integrated.defaultProfile.linux": "bash",
    "terminal.integrated.profiles.linux": {
        "sh": {
            "path": "sh",
            "args": []
        },
        "bash": {
            "path": "sh",
            "args": [
                "-c",
                "bash"
            ],
            "icon": "terminal-bash"
        },
        "zsh": {
            "path": "zsh"
        },
        "fish": {
            "path": "fish"
        },
        "tmux": {
            "path": "tmux",
            "icon": "terminal-tmux"
        },
        "pwsh": {
            "path": "pwsh",
            "icon": "terminal-powershell"
        }
    },

    "beautify.language": {
        "js": {
            "type": ["javascript", "json", "json"],
            "filename": [".jshintrc", ".jsbeautifyrc"],
            "ext": ["js", "json", "jsonc"]
        },
        "css": ["css", "scss"],
        "html": ["htm", "html"]
    },

    "files.associations": {
        ".gitconfig_common": "properties",
        ".gitconfig_linux": "properties",
        ".gitconfig_windows": "properties",
        ".gitconfig_wsl": "properties",
        "*.json.git": "cjson"
    },

    "[json]": {
        "editor.defaultFormatter": "HookyQR.beautify",
        "editor.formatOnSave": true,
    },
    "[jsonc]": {
        "editor.defaultFormatter": "HookyQR.beautify",
        "editor.formatOnSave": true,
    },
    "json.format.enable": true,

    "[powershell]": {
        "debug.saveBeforeStart": "nonUntitledEditorsInActiveGroup",
        "editor.semanticHighlighting.enabled": false,
        "editor.formatOnSave": true,
        "editor.wordSeparators": "`~!@#$%^&*()=+[{]}\\|;:'\",.<>/?"
    },
    "powershell.scriptAnalysis.enable": true,
    "powershell.scriptAnalysis.settingsPath": "powershell/PSScriptAnalyzerSettings.psd1",
    "powershell.codeFormatting.whitespaceBeforeOpenBrace": true,
    "powershell.codeFormatting.whitespaceBeforeOpenParen": true,
    "powershell.codeFormatting.whitespaceAroundOperator": true,
    "powershell.codeFormatting.whitespaceAfterSeparator": true,
    "powershell.codeFormatting.whitespaceInsideBrace": true,
    "powershell.codeFormatting.whitespaceBetweenParameters": true,
    "powershell.codeFormatting.addWhitespaceAroundPipe": true,
    "powershell.codeFormatting.trimWhitespaceAroundPipe": false,
    "powershell.codeFormatting.ignoreOneLineBlock": false,
    "powershell.codeFormatting.alignPropertyValuePairs": true,
    "powershell.codeFormatting.useCorrectCasing": true,

    "git.requireGitUserConfig": false,

    "terminal.integrated.environmentChangesRelaunch": false,

    "cSpell.ignorePaths": [
        "**/package-lock.json",
        "**/node_modules/**",
        "**/vscode-extension/**",
        "**/.git/objects/**",
        ".vscode",
        ".vscode-insiders",
        "source/stow/**",
        ".Xresources",
        ".xmobarrc",
        "windows/clink-completions/**",
        "fish/.config/base16-shell/**",
        "fish/.config/base16-fzf/**",
        "fish/.config/git-fuzzy/**",
        "fish/.config/fish/fish_variables",
        "linux/.config/micro/settings.json"
    ],
    "cSpell.words": [
        "asdf",
        "beaners",
        "buildx",
        "dockerhub",
        "dotfile",
        "dotfiles",
        "eval",
        "fundle",
        "joelvaneenwyk",
        "kleopatra",
        "noconfirm",
        "pacman",
        "qemu",
        "restow",
        "rlespinasse",
        "semver",
        "submodules",
        "symlink",
        "symlinking",
        "symlinks",
        "synoservicectl",
        "tldr",
        "xclip",
        "xmonad"
    ]
}
